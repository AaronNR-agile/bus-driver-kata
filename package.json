{
  "name": "typescript-seed",
  "version": "0.0.1",
  "description": "An auto-updating, opinionated TypeScript seed project. All killer, no filler.",
  "main": "dist",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives",
    "type-coverage": "type-coverage",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "mutation-test": "stryker run",
    "prepare": "husky install",
    "release": "semantic-release",
    "commit": "git-cz"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agiledigital-labs/typescript-seed.git"
  },
  "author": "Agile Digital",
  "private": true,
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/agiledigital-labs/typescript-seed/issues"
  },
  "homepage": "https://github.com/agiledigital-labs/typescript-seed",
  "devDependencies": {
    "@agiledigital/eslint-config": "^4.1.0",
    "@semantic-release/git": "^10.0.1",
    "@stryker-mutator/core": "8.2.6",
    "@stryker-mutator/jest-runner": "8.2.6",
    "@stryker-mutator/typescript-checker": "8.2.6",
    "@types/jest": "29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-typed-fp": "^5.4.0",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-total-functions": "^7.1.0",
    "fast-check": "3.19.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "semantic-release": "^20.1.1",
    "ts-jest": "29.1.4",
    "type-coverage": "2.29.0",
    "typescript": "^5.3.3"
  },
  "typeCoverage": {
    "atLeast": 100,
    "ignoreCatch": false,
    "strict": true,
    "detail": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", {
        "diagnostics": {
          "exclude": [
            "!**/*.(spec|test).ts"
          ]
        }
      }]
    }
  }
}
